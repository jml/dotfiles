{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(gcloud * list *)",
      "Bash(gcloud * describe *)",
      "Bash(gcloud * get-iam-policy *)",
      "Bash(gcloud config list *)",
      "Bash(gcloud config get *)",
      "Bash(gcloud projects list *)",
      "Bash(gcloud projects describe *)",
      "Bash(gcloud auth list *)",
      "Bash(gsutil ls *)",
      "Bash(gsutil cat *)",
      "Bash(gsutil stat *)",
      "Bash(bq ls *)",
      "Bash(bq show *)",
      "Bash(bq query --dry_run *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh pr status *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(gh issue status *)",
      "Bash(gh repo list *)",
      "Bash(gh repo view *)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh workflow list *)",
      "Bash(gh workflow view *)",
      "Bash(gh release list *)",
      "Bash(gh release view *)",
      "Bash(gh auth status *)",
      "Bash(gh search *)",
      "Bash(terraform init *)",
      "Bash(terraform init)",
      "Bash(terraform validate *)",
      "Bash(terraform validate)",
      "Bash(terraform plan *)",
      "Bash(terraform plan)",
      "Bash(terraform fmt *)",
      "Bash(terraform fmt)",
      "Bash(terraform show *)"
    ],
    "deny": [
      "Bash(terraform apply -auto-approve *)",
      "Bash(terraform destroy -auto-approve *)"
    ]
  }
}
